<% @ship_classes.each do |ship_class| %>
  <tr>
    <td><%= ship_class.name %></td>
    <td><%= ship_class.type %></td>
    <td><%= ship_class.country %></td>
    <td><%= ship_class.image %></td>
    <td><%= ship_class.observationair %></td>
    <td><%= ship_class.observationsurf %></td>
    <td><%= ship_class.observationunders %></td>
    <td><%= ship_class.fireair %></td>
    <td><%= ship_class.fireland %></td>
    <td><%= ship_class.firesurf %></td>
    <td><%= ship_class.fireunder %></td>
    <td><%= ship_class.maxspeed %></td>
    <td><%= ship_class.cruisespeed %></td>
    <td><%= ship_class.crew %></td>
    <td><%= ship_class.function %></td>
    <td><%= ship_class.note %></td>
    <td><%= link_to 'Show', ship_class %></td>
    <td><%= link_to 'Edit', edit_ship_class_path(ship_class) %></td>
    <td><%= link_to 'Destroy', ship_class, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

